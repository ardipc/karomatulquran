extends layout

block contentBackend
  .row
    .col-lg-12
      h2= title
        a.btn.btn-sm.btn-success.pull-right(href=env.app_url_back+'/pengguna/form') tambah
      hr

      table.table.table-striped
        thead
          tr
            th NO
            th NAMA
            th EMAIL
            th PASSWORD
            th LEVEL
            th AKTIF
            th ACTION
        tbody
          each dd, i in rows
            tr
              td= (i+1)
              td= dd.nama
              td= dd.email
              td= dd.password
              td= dd.level
              td= dd.aktif
              td
                a.btn.btn-sm.btn-primary(href=env.app_url_back+'/pengguna/'+dd.id+'/form') edit
                | &nbsp;
                a.btn.btn-sm.btn-danger(href=env.app_url_back+'/pengguna/'+dd.id+'/delete') hapus
